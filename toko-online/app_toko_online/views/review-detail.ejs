<% layout('layout') %>

<div class="container mt-5">
  <h1 class="mb-4"><%= title %></h1>

  <h3>Produk: <%= product.name %></h3>
  <p><%= product.description %></p>

  <div class="card mt-4">
    <div class="card-body">
      <h5 class="card-title">Ulasan dari <%= review.user %></h5>
      <p class="card-text"><%= review.comment %></p>
    </div>
  </div>

  <a href="/produk/<%= product.id %>" class="btn btn-primary mt-3">Kembali ke Produk</a>
</div>